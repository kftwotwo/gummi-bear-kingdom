<h1><%= @product.name %></h1>

<% if @product.reviews.any? %>
  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.name %> |<%= link_to "Edit", edit_product_review_path(@product, review) %> |<%= link_to "Delete", product_review_path(@product, review), :data => {:confirm => "You sure?", :method => "delete"} %></li>
    <% end %>
  </ul>
<% else %>
  <h4>Sorry ther are no reviews yet. You will be the first to review this product!</h4>
<% end %>

<p><%= link_to "New Review", new_product_review_path(@product) %></p>
<p><%= link_to "Back", products_path %></p>
