<div class="row">
  <div class="col s12 m7">
    <% if @product.reviews.any? %>
      <ul>
        <% @product.reviews.each do |review| %>
          <li>
            <div class="card horizontal">
                <div class="card-stacked">
                  <div class="card-content">
                    <p><%= review.name %></p>
                    <p><%= review.comment %></p>
                    <small>By <%= User.find(review.user_id).first_name %> <%= User.find(review.user_id).last_name %></small>
                  </div>
                  <div class="card-action">
                    <%= link_to "Edit", edit_product_review_path(@product, review) %> |<%= link_to "Delete", product_review_path(@product, review), :data => {:confirm => "You sure?", :method => "delete"} %>
                  </div>
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    <% else %>
      <h4>Sorry ther are no reviews yet. You will be the first to review this product!</h4>
    <% end %>
  </div>
</div>



<p><%= link_to "New Review", new_product_review_path(@product) %></p><br>
<p><%= link_to "Back", products_path %></p>
